---
import Container from "@components/container.astro";
import HeadingTitle from "@components/ui/heading-title.astro";
import { SCHOOLS } from "@constants/app";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { Image } from "astro:assets";

const t = useTranslations(getLangFromUrl(Astro.url));
---

<div class="py-7 md:py-10">
  <Container>
    <HeadingTitle title={t("school.title")} class="text-center text-primary" />
    <p class="mt-3 text-center text-body">{t("school.description")}</p>
    <div class="mt-5 flex flex-wrap justify-center">
      {
        SCHOOLS.map((item) => (
          <div class="w-1/2 p-3 md:w-1/3 lg:w-1/5">
            <a href={item.url} target="_BLANK">
              <Image
                src={item.logo}
                alt={item.name}
                width={130}
                height={130}
                class="mx-auto"
              />
            </a>
          </div>
        ))
      }
    </div>
  </Container>
</div>
