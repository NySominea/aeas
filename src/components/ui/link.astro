---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?:
    | "outline"
    | "primary"
    | "secondary"
    | "warning"
    | "inverted"
    | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-3.5",
  md: "px-3 py-2",
};

const styles = {
  outline: "bg-white border-2 border-black hover:bg-gray-100 text-black ",
  primary: "bg-primary text-white border-2 border-transparent",
  secondary: "bg-secondary text-white border-2 border-transparent",
  warning: "bg-amber-500 text-white border-2 border-transparent",
  inverted: "bg-white text-black border-2 border-transparent",
  muted: "bg-gray-100 hover:bg-gray-200   border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "flex items-center justify-center rounded-full text-center ring-gray-200 ring-offset-2 transition focus-visible:ring-2",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
