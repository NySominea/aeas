---
import LineDotConnector from "@components/ui/line-dot-connector.astro";

export interface Props {
  title: string;
  color: "primary" | "secondary";
  position?: "left" | "right" | "bottom" | "top";
  connector?: boolean;
  class?: string;
}

const {
  title,
  color,
  position = "left",
  connector = true,
  class: className,
} = Astro.props;
---

<div
  class:list={[
    "flex items-center gap-4",
    position === "bottom" ? "flex-col" : "",
    className,
  ]}
>
  <div class="flex-1">
    <div
      class:list={[
        "flex h-24 items-center justify-center rounded-full p-4 text-center leading-snug text-body-dark",
        `bg-${color}`,
      ]}
    >
      {title}
    </div>
  </div>
  {
    connector && (
      <div
        class:list={[
          position === "right" ? "-order-1 rotate-180" : "",
          position === "bottom" ? "-order-1 mb-3 -rotate-90" : "",
        ]}
      >
        <LineDotConnector
          class:list={[
            position === "right" ? "-order-1" : "",
            position === "bottom" ? "-order-1" : "",
          ]}
          lines={position === "bottom" ? 5 : 8}
        />
      </div>
    )
  }
</div>
